<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_color_white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="60dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_linearlayout"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/etGstNumber"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:background="@drawable/background_linearlayout"
                    android:fontFamily="@font/urbanist_medium"
                    android:hint="GST Number"
                    android:inputType="textCapCharacters"
                    android:textAllCaps="true"
                    android:maxLength="15"
                    android:maxLines="1"
                    android:padding="16dp"
                    android:textSize="12sp" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivRightGST"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="5dp"
                    android:background="@drawable/pancard_verify_right"
                    android:visibility="gone" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etBusinessName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_edittext"
                android:fontFamily="@font/urbanist_medium"
                android:hint="Business Name"
                android:maxLines="1"
                android:padding="16dp"
                android:textSize="12sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/background_edittext">

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/spBusinessType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:background="@android:color/transparent"
                    android:hint="Bank"
                    android:inputType="none"
                    android:spinnerMode="dropdown"
                    android:textAllCaps="true" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/arrow_up" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/llBusinessType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvAddMoreView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/urbanist_medium"
                android:gravity="end"
                android:hint="Add More"
                android:maxLines="1"
                android:padding="5dp"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp"
                android:visibility="gone" />


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etBusinessTurnover"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_edittext"
                android:fontFamily="@font/urbanist_medium"
                android:hint="Business Turnover"
                android:inputType="number"
                android:maxLines="1"
                android:padding="16dp"
                android:textSize="12sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvBusinessIncorporationDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_edittext"
                android:drawableRight="@drawable/ic_date"
                android:fontFamily="@font/urbanist_medium"
                android:hint="Business Incorporation Date"
                android:maxLines="1"
                android:padding="12dp"
                android:textSize="12sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/background_edittext">

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/spIncomeSlab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:background="@android:color/transparent"
                    android:inputType="none"
                    android:spinnerMode="dropdown"
                    android:textAllCaps="true" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/arrow_up" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/background_edittext">

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/spOwnerShipType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:background="@android:color/transparent"
                    android:hint="Bank"
                    android:inputType="none"
                    android:spinnerMode="dropdown"
                    android:textAllCaps="true" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/arrow_up" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/rlSpManualBillUploadType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/urbanist_regular"
                    android:text="Address Verification"
                    android:textColor="@color/text_color_gray_variant2"
                    android:textSize="14sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/background_edittext"
                    >

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/spManualBillUploadType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:background="@android:color/transparent"
                        android:hint="Bank"
                        android:inputType="none"
                        android:spinnerMode="dropdown"
                        android:textAllCaps="true" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/arrow_up" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/llUploadBillManual"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginVertical="10dp"
                    android:background="@drawable/background_edittext"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    app:layout_constraintBottom_toTopOf="@+id/rl_cb_terms"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
                    app:layout_constraintVertical_bias="0.089">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imBillImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:adjustViewBounds="true"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/llDefaultImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/gallery" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:fontFamily="@font/urbanist_regular"
                            android:text="Upload Bill"
                            android:textColor="@color/colorPrimary"
                            android:textFontWeight="2"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/llCustomerNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:visibility="gone"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="15dp">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Customer Number"
                            android:textColor="@color/text_color_black_variant1" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp">

                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/etCustomerNumber"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textCapCharacters"
                                android:textAllCaps="true"
                                android:background="@drawable/background_edittext"
                                android:hint="1234 567 125" />

                            <ImageView
                                android:id="@+id/ivRightElectrycityBill"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="20dp"
                                android:background="@drawable/pancard_verify_right"
                                android:visibility="gone" />

                        </RelativeLayout>
                        <RelativeLayout
                            android:id="@+id/rlServiceProviders"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginVertical="10dp"
                            android:background="@drawable/background_edittext"
                            android:visibility="visible">

                            <androidx.appcompat.widget.AppCompatSpinner
                                android:id="@+id/spServiceProvider"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="20dp"
                                android:background="@android:color/transparent"
                                android:hint="Bank"
                                android:inputType="none"
                                android:spinnerMode="dropdown"
                                android:textAllCaps="true" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="20dp"
                                android:background="@drawable/arrow_up" />
                        </RelativeLayout>
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnVerifyBill"
                            android:layout_width="100dp"
                            android:layout_height="30dp"
                            android:layout_gravity="right"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/bg_squre_btn_corner"
                            android:fontFamily="@font/urbanist_bold"
                            android:gravity="center"
                            android:maxLines="1"
                            android:paddingHorizontal="16dp"
                            android:text="Verify"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvCustomerName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:text="Customer name"
                            android:textColor="@color/colorAccent" />

                    </LinearLayout>


                </androidx.cardview.widget.CardView>


            </LinearLayout>



            <LinearLayout
                android:id="@+id/rlUploadStatement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/urbanist_regular"
                    android:text="Bank Statement"
                    android:textColor="@color/text_color_gray_variant2"
                    android:textSize="14sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvUploadStatement"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_squre_btn_outer_green_corner"
                    android:backgroundTint="@color/bg_color_blue_variant2"
                    android:fontFamily="@font/urbanist_regular"
                    android:gravity="center"
                    android:text="Upload Statement"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp" />

            </LinearLayout>



            <RelativeLayout
                android:id="@+id/rlSuccessfullyUpload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_squre_btn_outer_green_corner"
                android:visibility="gone">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:fontFamily="@font/urbanist_regular"
                    android:gravity="center"
                    android:text="Successfully Upload Statement"
                    android:textAlignment="center"
                    android:textColor="@color/text_color_greeb_variant1"
                    android:textSize="12sp" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivRight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="24dp"
                    android:background="@drawable/pancard_verify_right"
                    android:visibility="visible" />

            </RelativeLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnNext"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/bg_squre_btn_corner"
                android:fontFamily="@font/urbanist_bold"
                android:gravity="center"
                android:maxLines="1"
                android:paddingHorizontal="16dp"
                android:text="Next"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp" />

        </LinearLayout>
    </ScrollView>


</layout>