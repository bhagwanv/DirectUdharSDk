<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="32dp"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/adhaar_user_bg"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilAadhaarNumber"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:hint="Enter Adhaar Number">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etAdhaarNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:inputType="numberSigned"
                    android:minLines="1"
                    android:maxLength="12"/>

            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:id="@+id/rl_cb_terms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cbUserDeclaration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:backgroundTint="@color/holo_gray_dark"/>

                <TextView
                    android:id="@+id/tvTermsOfUse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:justificationMode="inter_word"
                    android:text="I hereby agree to provide my aadhaar number and one time password (otp) data for aadhaar based authentication for kyc purpose in establishing my identity with directudhaar powered by shopkirana. \n"
                    android:textColor="@color/holo_gray_dark" />
            </LinearLayout>

            <Button
                android:id="@+id/btnVerifyAadhaar"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="40dp"
                android:layout_gravity="center_horizontal"
                android:paddingHorizontal="16dp"
                android:background="@drawable/bg_squre_btn_corner"
                android:maxLines="1"
                android:text="E-Verify Aadhaar"
                android:textAllCaps="false"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OR"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:textSize="18sp"
                android:layout_gravity="center_horizontal"
                android:textAllCaps="true"
                android:textColor="@color/holo_gray_dark" />

            <Button
                android:id="@+id/btnManuallyUploadAadhaar"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:paddingHorizontal="16dp"
                android:background="@drawable/bg_squre_btn_corner"
                android:maxLines="1"
                android:text="Manually Upload Aadhaar"
                android:textAllCaps="false"
                android:textColor="@color/white" />
        </LinearLayout>
    </ScrollView>


</layout>